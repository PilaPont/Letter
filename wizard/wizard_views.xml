<odoo>
    <data>

        <record model="ir.ui.view" id="view_assign_letter_wizard">
            <field name="name">letter.assign_letter_wizard</field>
            <field name="model">letter.assign_letter_wizard</field>
            <field name="arch" type="xml">
                <form string="Assign Letter">
                    <group>
                        <field name="letter_id"/>
                        <field name="subject" readonly="True"/>
                        <field name="user_id"/>
                    </group>

                    <footer>
                        <button string="Save" name="do_save" type="object"/>
                        <button special="cancel" string="Discard"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>