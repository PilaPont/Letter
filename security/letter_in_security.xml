<odoo>
    <data>
        <!--CATEGORY-->
        <record id="model_category_letter_in" model="ir.module.category">
            <field name="name">Letter In</field>
            <field name="sequence">1001</field>
        </record>

        <!--SEE FOLLOWING-->
        <record id="group_letter_in_see_follower" model="res.groups">
            <field name="name">See Following</field>
            <field name="category_id" ref="model_category_letter_in"/>
        </record>

        <!--SEE ALL-->
        <record id="group_letter_in_see_all" model="res.groups">
            <field name="name">See All</field>
            <field name="category_id" ref="model_category_letter_in"/>
            <field name="implied_ids" eval="[(4,ref('group_letter_in_see_follower'))]"/>
        </record>

        <!--RULES-->
        <record id="rule_letter_in_all" model="ir.rule">
            <field name="name">see all rules</field>
            <field name="model_id" ref="model_letter_letter_in"/>
            <field name="groups" eval="[(4,ref('group_letter_in_see_all'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <record model="ir.rule" id="letter_in_rule">
            <field name="name">Letter In</field>
            <field name="model_id" ref="model_letter_letter_in"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>
    </data>
</odoo>

