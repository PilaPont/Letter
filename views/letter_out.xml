<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_letter_out_list">
            <field name="name">letter.out tree</field>
            <field name="model">letter.letter.out</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="subject"/>
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="send_date"/>
                    <field name="signatory_id"/>
                    <field name="state"/>
                </tree>
          </field>
        </record>

    <!--form view letter out-->
        <record model="ir.ui.view" id="view_letter_out_form">
            <field name="name">letter letter.out </field>
            <field name="model">letter.letter.out</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_draft" type="object" string="Draft"
                            attrs="{'invisible':['|',('state','in',('draft','acknowledged','sent','approved')),
                            ('is_current_user','=',False)]}" class="oe_highlight" icon="fa-pencil-square-o" />

                        <button name="action_submit" type="object" string="Submit" class="oe_highlight"
                            attrs="{'invisible':['|',('state','!=','draft'),
                            ('is_current_user','=',False)]}"/>

                        <button name="action_approve" type="object"
                            string="Approve" attrs="{'invisible':['|',('state','!=','submitted'),
                            ('is_current_user','=',False)]}" class="oe_highlight"/>

                        <button name="action_sent" type="object"
                            string="Send" attrs="{'invisible':['|',('state','!=','approved'),('is_current_user','=',False)]}"
                                 groups="letter.group_access_secretariat"
                                class="oe_highlight" icon="fa-paper-plane"/>

                        <button name="action_acknowledge" string="Acknowledge" type="object" class="oe_highlight"
                            attrs="{'invisible' :[('state' ,'!=', 'sent')]}"
                            groups="letter.group_access_secretariat" icon="fa-check"/>

                        <button name="action_cancel" type="object"
                            string="Cancel" attrs="{'invisible':['|',('state','in',('sent','acknowledged','draft','canceled'))
                            ,('is_current_user','=',False)]}" class="oe_highlight" icon="fa-times"/>

                        <field name="state" widget="statusbar"/>
                        <field name="is_current_user" attrs="{'invisible':True}"/>
                        <field name="has_attachment" attrs="{'invisible':True}"/>
                        <field name="user" attrs="{'invisible':True}"/>
                        <field name="type" invisible="True"/>
                        <field name="reference_letter_type" invisible="True"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="issue_date" attrs="{'readonly':True}"/>
                            <field name="send_date" attrs="{'readonly':True}"/>
                        </group>
                        <group colspan="2" col="2">
                            <group>
                                <field name="subject" attrs="{'readonly': [('state','!=','draft')]}"
                                       required="True" placeholder="Subject"/>
                                <field name="partner_id" string='Addressee' attrs="{'readonly': [('state','!=','draft')]}"
                                       required="True"/>

                                <field name="user_id" attrs="{'readonly': [('state','!=','draft')],'required': True}"/>
                                <field name="company_id"/>
                                <field name="reference_type" attrs="{'readonly': [('state','!=','draft')]}"
                                       required="True"/>


                                <field name="reference_letter_id" widget="selection" string="Following"
                                       attrs="{'required': [('reference_type', 'in', ('following', 'reply_to'))],
                                       'invisible': [('reference_type', '!=', 'following')], 'readonly': [('state','!=','draft')]}"
                                       domain="[('type', '=', reference_letter_type),('name','!=',False)]"/>

                                <field name="reference_letter_id" widget="selection" string="Reply To"
                                       attrs="{'required': [('reference_type', 'in', ('following', 'reply_to'))],
                                       'invisible': [('reference_type', '!=', 'reply_to')], 'readonly': [('state','!=','draft')]}"
                                       domain="[('type', '=', reference_letter_type),('name','!=',False)]"/>

                                <field name="phone_id" attrs="{'required': [('reference_type', '=', 'phone')],
                                                       'invisible': [('reference_type', '!=', 'phone')]}"/>
                                <field name="meeting_id" attrs="{'required': [('reference_type', '=', 'meeting')],
                                                       'invisible': [('reference_type', '!=', 'meeting')]}" />

                                <field name="media_type" string='Send Media' attrs="{'readonly': [('state','!=','draft')]}"
                                       required="True"/>
                                <field name="role_based_email"
                                       attrs="{'invisible': [('media_type', '!=', 'email')],
                                       'required': [('media_type', '=', 'email')]}"/>
                            </group>
                            <group>
                                <field name="is_digital_signature" attrs="{'readonly': [('state','!=','draft')]}"
                                       required="True"/>
                                <field name="signatory_id" attrs="{'readonly': [('state','!=','draft')]}"
                                       required="True" domain=""/>
                                <field name="content_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="header_id" attrs="{'readonly': [('state','!=','draft')]}"
                                      required="True" options="{'no_create': True,'no_open': True}"/>
                                <field name="letter_format_id" required="1" options="{'no_create': True,'no_open': True}"/>
                                <field name="attachment_ids" attrs="{'readonly': [('state','!=','draft')]}" widget="many2many_binary"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Letter text" name="letter">
                                <field name="letter_text" attrs="{'readonly': [('state','!=','draft')]}"/>
                            </page>
                            <page string="Cc" >
                                <field name="cc_ids" attrs="{'readonly': [('state','!=','draft')]}" mode="tree">
                                    <tree>
                                        <field name="title"/>
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                        <field name="mobile"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="letter_series" string="Letter Series">
                                <field name="related_letter_ids" widget="one2many_list" mode="tree">
                                    <tree>
                                        <field name="name"/>
                                        <field name="subject"/>
                                        <field name="send_date"/>
                                        <field name="partner_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
       <!--mail.activity-->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>
