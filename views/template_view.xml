<odoo>
    <data>

        <!--view and action letter.format-->
        <record model="ir.ui.view" id="letter.format_view_list">
            <field name="name">letter format tree</field>
            <field name="model">letter.format</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="font_size"/>
                    <field name="is_default"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="letter.format_view_form">
            <field name="name">letter Format form</field>
            <field name="model">letter.format</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="font_size"/>
                                <field name="is_default"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="letter_header_list">
            <field name="name">letter header</field>
            <field name="model">letter.header</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="language_id"/>
                    <field name="header_img"/>
                    <field name="footer_img"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="letter_header_form">
            <field name="name">letter header</field>
            <field name="model">letter.header</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>
                                <field name="language_id"/>
                                <field name="header_img" class="oe_avatar" widget="image"/>
                                <field name="footer_img" class="oe_avatar" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="letter_content_type_list">
            <field name="name">letter content</field>
            <field name="model">letter.content_type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="letter_content_type_form">
            <field name="name">letter content</field>
            <field name="model">letter.content_type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>
                                <field name="active"/>
                            </group>
                            <group></group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>