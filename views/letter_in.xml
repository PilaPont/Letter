<odoo>
    <data>

        <record id="view_letter_in_tree" model="ir.ui.view">
            <field name="name">letter in</field>
            <field name="model">letter.letter.in</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="subject"/>
                    <field name="reference_type"/>
                    <field name="receipt_date"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_letter_in_form">
            <field name="name">letter in form</field>
            <field name="model">letter.letter.in</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="register_button" type="object" class="oe_highlight" string="Register"
                                attrs="{'invisible':['|',('is_current_user','=',False),('state','!=','new')]}"/>

                        <button name="assign_button" type="object" class="oe_highlight" string="Assign"
                                attrs="{'invisible':['|',('is_current_user','=',False),('state','not in', ('registered', 'returned'))]}"/>

                        <button name="return_button" type="object" class="oe_highlight" string="Return"
                                attrs="{'invisible':['|',('is_current_user','=',False),('state','!=','assigned')]}"/>

                        <button name="done_button" type="object" class="oe_highlight" string="Done"
                                attrs="{'invisible':['|',('is_current_user','=',False),('state','!=','assigned')]}"
                                icon="fa-check"/>

                        <button name="answer_button" type="object" string="Reply"
                                attrs="{'invisible':['|',('is_current_user','=',False),('state','=', 'new')]}"
                                icon="fa-reply" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>

                        <field name="type" invisible="True"/>
                        <field name="reference_letter_type" invisible="True"/>
                        <field name="is_current_user" invisible="True"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" readonly="True"/>
                        </group>
                        <group colspan="2" col="2">
                            <group>
                                <field name="company_id"/>
                                <field name="partner_id" string="Sender" attrs="{'readonly': [('state','!=','new')]}"/>
                                <field name="issue_date" required="True" attrs="{'readonly': [('state','!=','new')]}"/>
                                <field name="receipt_date" attrs="{'readonly': [('state','!=','new')]}"/>
                                <field name="sender_letter_number" attrs="{'readonly': [('state','!=','new')]}"/>
                                <field name="subject" attrs="{'readonly': [('state','!=','new')]}"/>
                                <field name="user_id" attrs="{'required': [('state', '!=', 'new')],'readonly':True}"/>

                            </group>
                            <group>
                                <field name="media_type" string='Delivery Media'
                                       attrs="{'readonly': [('state','!=','new')]}"/>
                                <field name="role_based_email"
                                       attrs="{'invisible': [('media_type', '!=', 'email')],
                                       'required': [('media_type', '=', 'email')],'readonly': [('state','!=','new')]}"/>

                                <field name="email_id" attrs="{'invisible': [('media_type', 'not in', ('p_email','w_email'))],
                                       'required': [('media_type', 'in', ('p_email','w_email'))],'readonly': [('state','!=','new')]}"/>
                                <field name="reference_type" attrs="{'readonly': [('state','!=','new')]}"/>
                                <field name="reference_letter_id" widget="selection" attrs="{'required': [('reference_type', 'in', ('following', 'reply_to'))],
                                            'invisible': [('reference_type', 'not in', ('following', 'reply_to'))],'readonly': [('state','!=','new')]}"
                                       domain="[('type', '=', reference_letter_type),('name','!=',False)]"/>
                                <field name="phone_id"
                                       attrs="{'required': [('reference_type', '=', 'phone')],
                                                       'invisible': [('reference_type', '!=', 'phone')]}"
                                       options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="meeting_id"
                                       attrs="{'required': [('reference_type', '=', 'meeting')],
                                                       'invisible': [('reference_type', '!=', 'meeting')]}"
                                       options="{'no_create': True, 'no_create_edit':True}"/>

                                <field name="content_id" attrs="{'readonly': [('state','!=','new')]}"/>
                                <field name="deadline_date" attrs="{'readonly': [('state','!=','new')]}"/>
                                <field name="attachment_ids" widget="many2many_binary"
                                       attrs="{'readonly': [('state','!=','new')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Letter Series" name="letter_series">
                                <field name="related_letter_ids" widget="one2many_list" mode="tree">
                                    <tree>
                                        <field name="name"/>
                                        <field name="subject"/>
                                        <field name="send_date"/>
                                        <field name="partner_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <!--mail.activity-->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="letter_in_kanban" model="ir.ui.view">
            <field name="name">letter.letter.in</field>
            <field name="model">letter.letter.in</field>
            <field name="arch" type="xml">
                <kanban quick_create="false">
                    <field name="display_name"/>
                    <field name="user_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div>
                                        <strong class="o_kanban_record_title">
                                            <field name="display_name"/>
                                        </strong>
                                    </div>

                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)"
                                                 t-att-title="record.user_id.value" t-att-alt="record.user_id.value"
                                                 width="24" height="24" class="oe_kanban_avatar"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
