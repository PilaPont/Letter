<odoo>
    <data>


        <record id="letter_header_view_list" model="ir.ui.view" >
            <field name="name">letter.header.view.list</field>
            <field name="model">letter.header</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="language_id"/>
                    <field name="header_img"/>
                    <field name="footer_img"/>
                </tree>
            </field>
        </record>

        <record id="letter_header_view_form" model="ir.ui.view">
            <field name="name">letter.header.view.form</field>
            <field name="model">letter.header</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id"/>
                                <field name="language_id"/>
                                <field name="header_img" class="oe_avatar" widget="image"/>
                                <field name="footer_img" class="oe_avatar" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--action header letter-->
        <record model="ir.actions.act_window" id="letter.action_header">
            <field name="name">Header</field>
            <field name="res_model">letter.header</field>
            <field name="view_mode">tree,form</field>
            <field name="context"/>
        </record>
        <menuitem id="letter_menu_header" name="Letter Header" parent="letter_menu_config" action="letter.action_header"
                  sequence="5"/>

    </data>
</odoo>