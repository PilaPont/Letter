<odoo>
    <data>
<!--tree view letters-->
        <record model="ir.ui.view" id="letter_letters_view_list">
            <field name="name">letter.tree</field>
            <field name="model">letter.letter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="partner_id" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="letter_letter_view_form">
            <field name="name">letter.form</field>
            <field name="model">letter.letter</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="subject"/>
                                <field name="partner_id"/>
                                <field name="issue_date"/>
                                <field name="content_id"/>
                            </group>
                            <group>
                                <field name="reference_type"/>
                                <field name="user_id"/>
                                <field name="send_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

<!--search for letter out-->
        <record model="ir.ui.view" id="letter_out_search">
            <field name="name">search letter out</field>
            <field name="model">letter.letter.out</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Number, Addressee or Subject"
                           filter_domain="['|','|','|',('name','ilike',self),('subject','ilike',self),('partner_id.name','ilike',self),('partner_id.parent_id.name','ilike',self)]"/>
                    <group expand="1" string="Group By">
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                        <filter string="Responsible" name="user_id" context="{'group_by':'user_id'}"/>
                    </group>
                    <filter string="Late Activities" name="activities_overdue"
                            domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                            help="Show all opportunities for which the next action date is before today"/>
                    <filter string="Today Activities" name="activities_today"
                            domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="Future Activities" name="activities_upcoming_all"
                        domain="[('activity_ids.date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))
                        ]"/>
                </search>
            </field>
        </record>

<!--search for letter in-->
        <record model="ir.ui.view" id="letter_in_search">
            <field name="name">search letter in</field>
            <field name="model">letter.letter.in</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Number, Sender or Subject"
                           filter_domain="['|','|','|',('name','ilike',self),('subject','ilike',self),('partner_id.name','ilike',self),('partner_id.parent_id.name','ilike',self)]"/>
                    <group expand="1" string="Group By">
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                        <filter string="Responsible" name="user_id" context="{'group_by':'user_id'}"/>
                    </group>
                    <filter string="Late Activities" name="activities_overdue"
                            domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                            help="Show all opportunities for which the next action date is before today"/>
                    <filter string="Today Activities" name="activities_today"
                            domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="Future Activities" name="activities_upcoming_all"
                        domain="[('activity_ids.date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))
                        ]"/>
                </search>
            </field>
        </record>


<!--action view letters-->
        <record model="ir.actions.act_window" id="letter.action_letters">
            <field name="name">Letter</field>
            <field name="res_model">letter.letter</field>
            <field name="view_mode">tree</field>
            <field name="context" />
        </record>
<!--action view letter out-->
        <record model="ir.actions.act_window" id="letter.action_letter_out">
            <field name="name">Letter Out</field>
            <field name="res_model">letter.letter.out</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{
                'default_type': 'out',
                'default_user': 1 ,
                }</field>
        </record>
<!--action header letter-->
        <record model="ir.actions.act_window" id="letter.action_header">
            <field name="name">Header</field>
            <field name="res_model">letter.header</field>
            <field name="view_mode">tree,form</field>
            <field name="context" />
        </record>
<!--action mod letter-->
        <record model="ir.actions.act_window" id="letter.action_format">
            <field name="name">Letter Format</field>
            <field name="res_model">letter.format</field>
            <field name="view_mode">tree,form</field>
            <field name="context" />
        </record>
<!--view content type        -->
        <record model="ir.actions.act_window" id="letter.action_content_type">
            <field name="name">Content Type</field>
            <field name="res_model">letter.content_type</field>
            <field name="view_mode">tree,form,activity</field>
            <field name="context"/>
        </record>
<!--action view in-->
        <record model="ir.actions.act_window" id="letter.action_letter_in">
            <field name="name">Letter In</field>
            <field name="res_model">letter.letter.in</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{
                'default_type': 'in',
                }</field>
        </record>

        <!--menu item view-->
        <menuitem id="main_letters_menu" name="Letters" web_icon="letter,static/description/icon.png"/>
        <menuitem id="letter_menu_out" name="Letter Out" parent="main_letters_menu" action="letter.action_letter_out" sequence="10" />
        <menuitem id="letter_menu_in" name="Letter In" parent="main_letters_menu" action="letter.action_letter_in" sequence="15" />
        <menuitem id="letter_menu_config" name="Configuration" parent="main_letters_menu" sequence="20" groups="letter.group_letter_manager"/>
        <menuitem id="letter_menu_header" name="Letter Header" parent="letter_menu_config" action="letter.action_header" sequence="5"/>
        <menuitem id="letter_menu_content_type" name="Content Type" parent="letter_menu_config" action="letter.action_content_type" sequence="10"/>
        <menuitem id="letter_menu_format" name="Format" parent="letter_menu_config" action="letter.action_format" sequence="15"/>
  </data>
</odoo>

